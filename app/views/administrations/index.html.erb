<h1>Administrations</h1>

<div class="clearfix mb-2">
  <%= link_to 'New Administration', new_administration_path, class: 'btn btn-success float-right' %>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @administrations.each do |administration| %>
      <tr>
        <td><%= administration.name %></td>
        <td><%= administration.city %></td>
        <td><%= administration.user.email %></td>
        <td><%= link_to 'Show', administration, class: 'btn btn-primary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_administration_path(administration), class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Delete', administration, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>